<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/naranja"
    tools:context="com.corporacioncorrales.cotizacionesapp.fragments.HistorialDocsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/grey300">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historial de Documentos"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/negro"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gris_fondo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:background="@color/gris_fondo">
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gris_fondo"/>
                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tvId"
                        android:textColor="@color/negro"
                        android:textSize="@dimen/font_size_row_documents_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Id"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:maxLines="1"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey100"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tvFecha"
                        android:textColor="@color/negro"
                        android:textSize="@dimen/font_size_row_documents_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:maxLines="1"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey100"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="70dp"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/tvMoneda"
                            android:textColor="@color/negro"
                            android:textSize="@dimen/font_size_row_documents_history"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Moneda"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:maxLines="1"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey100"/>
                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tvTotal"
                        android:textColor="@color/negro"
                        android:textSize="@dimen/font_size_row_documents_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:maxLines="1"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey100"/>
                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tvRubro"
                        android:textColor="@color/negro"
                        android:textSize="@dimen/font_size_row_documents_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rubro"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:maxLines="1"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gris_fondo"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gris_fondo"/>

            <android.support.v7.widget.RecyclerView
                android:background="@color/grey100"
                android:id="@+id/rvDocumentsHistory"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
